<% if logged_in? %>
  <div class="fix_box">
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render "shared/user_info" %>
        </section>
      </aside>
    </div>
  </div>
<% else %>
  <div class="center jumbotron padding_top ">
    <h1><%= t "home_page.intro" %></h1>
    <%= link_to t("sign_up"), signup_path, class: "btn btn-lg btn-primary create" %>
  </div>
<% end %>
